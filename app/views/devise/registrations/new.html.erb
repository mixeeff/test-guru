<%= render "devise/shared/error_messages", resource: resource %>

<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t('.header') %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <p>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, class:'form-control' %>
            </p>

            <p>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class:'form-control' %>
            </p>

            <p>
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", class:'form-control', placeholder: 'email' %>
            </p>

            <p>
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
              <% if @minimum_password_length %>
                <small class="form-text">(<%= t('.minimum_password_length', length: @minimum_password_length) %>)</small>
              <% end %>
            </p>

            <%= f.label :password_confirmation %>
              <div class="input-group mb-3">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
                <div class="input-group-append hide">
                  <span class="input-group-text">
                    <%= octicon 'check', class: 'text-success hide' %>
                    <%= octicon 'x', class: 'text-danger hide' %>
                  </span>
                </div>
              </div>

            <p>
              <%= f.submit t('.sign_up'), class: 'btn btn-primary mt-3' %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
