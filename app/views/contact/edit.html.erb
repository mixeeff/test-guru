<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h1><%= t('.header') %></h1>

    <div class="card border-primary">
      <div class="card-body">
        <div class="form-group">
          <%= form_with url: contact_path, local: true, method: :post do |form| %>
            <p>
              <%= form.label :body, t('.body') %><br>
              <%= form.text_area :body, rows: 7, cols: 60, class:'form-control' %>
            </p>
            <p>
              <%= form.submit t('.send'), class: 'btn-primary mt-3' %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <p>
      <%= link_to t('.back'), root_path %>
    </p>
  </div>
</div>
