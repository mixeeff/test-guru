<div class="form-group">
  <%= form_with model: [:admin, @badge], local: true, id: 'badge-form' do |form| %>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name, class:'form-control' %>
    </p>

    <p>
      <%= form.label :filename %>
      <%= form.text_field :filename, class:'form-control' %>
    </p>

    <p class = 'mt-4'>
      <%= form.label :rule_type, t('.rule_type') %>
      <%= form.select :rule_type, Badge::RULE_TYPES %>
    </p>

    <p id = 'rule_value'>
      <%= form.label :rule_value, t('.rule_value') %>
      <%= form.select :rule_value, available_levels %>
    </p>

    <p>
      <%= form.submit class: 'btn-primary mt-3' %>
    </p>
  <% end %>

  <p id = 'rule_value_0', class = 'hide'>
    <%= label_tag :rule_value, t('.rule_value') %>
    <%= select :badge, :rule_value, options_for_select(available_levels) %>
  </p>

  <p id = 'rule_value_1', class = 'hide'>
    <%= label_tag :rule_value, t('.rule_value') %>
    <%= select :badge, :rule_value, options_for_select(available_categories) %>
  </p>

</div>
