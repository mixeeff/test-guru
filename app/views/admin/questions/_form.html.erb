<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>
  <p>
    <%= form.label :body, 'Текст вопроса' %><br>
    <%= form.text_area :body, rows: 7, cols: 60 %>
  </p>
  <p>
  <%= form.submit button_text %>
  </p>
  <% end %>
</form>
