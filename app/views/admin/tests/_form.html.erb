<div class="form-group">
  <%= form_with model: [:admin, @test], local: true do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title, class:'form-control' %>
    </p>

    <p>
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class:'form-control' %>
    </p>

    <p>
      <%= form.label :level %><br>
      <%= form.number_field :level, class:'form-control' %>
    </p>
    <p>
      <%= form.label :timer %><br>
      <%= form.number_field :timer, class:'form-control', placeholder: t('.empty_timer') %>
    </p>
    <p>
      <%= form.submit class: 'btn-primary mt-3' %>
    </p>
    <% end %>
</div>
