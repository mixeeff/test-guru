<h1><%= t('.header') %></h1>
<% if @tests.present? %>
  <table>
    <tr>
      <th align="left"><%= Test.human_attribute_name(:title) %></th>
      <th><%= Test.human_attribute_name(:category_id) %></th>
      <th><%= Test.human_attribute_name(:level) %></th>
      <th><%= t('.questions_count') %></th>
      <th colspan="2"><%= t('.actions') %></th>
    </tr>
    <%= render @tests %>
  </table>
<% else %>
  <p><%= t('.no_tests') %></p>
<% end %>
<p>
  <%= link_to t('.create'), new_admin_test_path %>
</p>
