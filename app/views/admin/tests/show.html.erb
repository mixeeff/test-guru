<div class="container-fluid justify-content-center mt-3">
  <h1><%= @test.title %></h1>
  <p class="badge badge-secondary">
    <%= Test.human_attribute_name(:category_id) %>:
    <%= @test.category.title %>
  </p>
  <p>
    <%= Test.human_attribute_name(:level) %>:
    <%= @test.level %></p>

  <% if @test.questions.any? %>
    <table class='table'>
      <tr>
        <th align="left"><%= Question.human_attribute_name(:body) %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
      <%= render @test.questions %>
    </table>

  <% else %>
    <p><%= t('.no_questions')%></p>
  <% end %>

  <p class="text-center mt-4">
    <%= link_to t('.edit'), edit_admin_test_path(@test.id) %>
  </p>

  <p class="text-center mt-4">
    <%= link_to t('.create_new_question'), new_admin_test_question_path(@test.id) %>
  </p>

  <p class="text-center">
    <%= link_to t('.back'), admin_tests_path %>
  </p>
</div>
