<h1><%= @test.title %></h1>
<p>Категория: <%= @test.category.title %></p>
<p>Уровень: <%= @test.level %></p>

<% if @test.questions.any? %>
  <table>
    <tr>
      <th align="left"> Вопрос </th>
      <th colspan="3"> Действия </th>
    </tr>
    <%= render @test.questions %>
  </table>

<% else %>
  <p>У этого теста пока нет вопросов</p>
<% end %>
<p>
  <%= link_to 'Создать новый вопрос', new_admin_test_question_path(@test.id) %>
</p>

<p>
  <%= link_to 'Назад', admin_tests_path %>
</p>
