<tr>
  <td class="align-middle">
    <%= link_to test.title, admin_test_path(test), class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td> <%= test.category.title %> </td>
  <td align="center"> <%= test.level %> </td>
  <td align="center"> <%= test.questions.count %> </td>
  <td align="center">
    <% if test.timer.nil? %>
      <%= octicon 'dash' %>
    <% else %>
      <%= octicon 'clock' %>
    <% end %>
  </td>
  <td> <%= link_to t('.edit'),
            edit_admin_test_path(test),
            data: { test_id: test.id },
            class: 'form-inline-link' %>
  </td>
  <td> <%= link_to t('.delete'), admin_test_path(test), method: :delete, data: { confirm: t('.confirm') } %> </td>
  <td> <%= button_to t('.start'), start_test_path(test), class: 'btn-secondary' %> </td>
</tr>
